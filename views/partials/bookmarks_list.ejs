		    error: function(XMLHttpRequest, status, err){
		    	console.log('error', err);
		    }
		});
			

	});

	function createBMList(bookmarks_collection){
		var bmList = $('#bm-list');
		console.log("inside createBMList function");
		$.each(bookmarks_collection, function(bookmark){
			console.log("bookmark document:" + bookmark);
			var bm_div = $('<div/>')
				.addClass('bm-div')
				.appendTo(bmList);

			var ahref = $('<a/>')
				.attr('href', bookmark.bookmark_url)
				.appendTo(bm_div);
			ahref.text(bookmark_name);

			var img = $('<img/>')
				.addClass('bookmark_favicon')
				.attr('src', bookmark.bookmark_favicon)
				.prependTo(ahref);
		});
	};

</script>



<div id = "bm-list">
	

	<% for(var x=0; x<book_in.length; x++){ %>
		<div>

			<img class="bookmark_favicon" src="https://s3.amazonaws.com/kc-startpage/<%= book_in[x].bookmark_favicon %>" >
			<a href = "<%= book_in[x].bookmark_url %>"><%= book_in[x].bookmark_name %></a>
		
		</div>
	<% }; %>


</div>